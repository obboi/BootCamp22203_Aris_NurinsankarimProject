

<div class="container" mt-4>
    <div class="row">
        <div class="col-md8">
            <h1 class="text-centrer">Contact List</h1>

            <% if (contacts.length > 0){%>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% contacts.forEach((list,i) => {i++  %>
                  <tr>
                    <td scope="row"><%= i++ %> </td>
                    <td><%=list.name %></td>
                    <td><%=list.phone %></td>
                    <td><%=list.email %></td>
                    <td>
                        <a href="/contact/<%=list.name%>" class="btn  btn-successs badge badge-pill badge bg-dark"><i class="bi bi-info"></i>detail</a>
                    </td>
                    <% })%>
                    <% }else{ %>
                      <tr>eweh</tr>
                    <% } %> 
                </tbody>
              </table>
        </div>
    </div>


</div>


