<body>
    <h3>Halaman Utama WebServer</h3>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>

    </ul>
    <h1>Web Server Node JS</h1>
    
    <p>Wellcome to my page <%= nama, cont %> </p>


<!-- array ejs + error Handling jika data tidak tersedia-->
    <p>List Contact</p>
    <% if (cont.length > 0){%>
    <% cont.forEach(list =>  {%>
     <ul>
        <li>nama : <%=list.nama %> </li>
        <li>email : <%=list.email %> </li>
    </ul>

    <% })}else{ %>
    <p>contact data is empty</p> 
    <% } %> 


</body>
</html>